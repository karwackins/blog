{% if pageCount > 1 %}
    <ul class="pager">
        {% if previous is defined %}
            <li class="prev">
                <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}">&lt; Newer posts</a>
            </li>
        {% endif %}

        {% if next is defined %}
            <li class="next">
                <a href="{{ path(route, query|merge({(pageParameterName): next})) }}"> Older posts&gt;</a>
            </li>
        {% endif %}
    </ul>
{% endif %}